<!DOCTYPE html>
<html>
<head>
  <title>Cube Algs</title>
  <%= favicon_link_tag 'favicon.png' %>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-dark bg-primary navbar-fixed-top">
    <div class="navbar-header">
      <%= link_to image_tag('favicon.png', width: 32, height: 32), cube_algs_home_path, class: 'navbar-brand active nav-item' %>
    </div>
    <ul class="nav navbar-inverse navbar-nav">
      <%= bootstrap_nav_link 'F2L', cases_f2l_path, class: 'nav-link' %>
      <%= bootstrap_nav_link 'OLL', cases_oll_path, class: 'nav-link' %>
      <%= bootstrap_nav_link 'PLL', cases_pll_path, class: 'nav-link' %>
    </ul>
    <%= yield :nav %>

    <div class="col-sm-3 col-md-3 pull-md-right">
      <%= yield :search %>
    </div>
  </nav>
  <div class="container">
    <%= yield %>
  </div>
</body>
</html>
