<% content_for :search do %>
  <%= form_tag solutions_path, class: 'navbar-form', method: :get do %>
    <div class="input-group">
      <%= text_field_tag :filter, @filter, name: 'Search', class: 'form-control', placeholder: 'Search for. . . ' %>
      <span class="input-group-btn">
        <%= submit_tag "Go", class: 'btn btn-primary' %>
      </span>
    </div>
  <% end %>
<% end %>

<%= render partial: 'behaviour/new_solution_modal' %>
<div class="card">
  <div class="card-body">
    <h2 class="card-title">
      Explore
    </h2>
  </div>
  <div class="card-body">
    <%= render partial: 'glube/glube', locals: { solution: @solution, type: @solution.case&.case_type || 'FULL' } %>
    <span class="card-text">
    </span>
  </div>
  <div class="card-body">
    <h3 class="card-title"></h2>
    <%= render partial: 'solutions_table', locals: { solutions: Solution.all } %>
    </div>
  </div>
  <div class="card-footer">
  </div>
</div>
