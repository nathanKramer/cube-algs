<% content_for :nav do %>
  <ul class="nav navbar-inverse navbar-nav">
    <li class="nav-item active">
      <%= link_to 'Home', cube_algs_home_path, class: 'nav-link' %>
    </li>
    <li class="nav-item">
      <%= link_to 'F2L', cube_algs_f2l_path, class: 'nav-link' %>
    </li>
    <li class="nav-item">
      <%= link_to 'OLLs', cube_algs_oll_path, class: 'nav-link' %>
    </li>
    <li class="nav-item">
      <%= link_to 'PLLs', cube_algs_pll_path, class: 'nav-link' %>
    </li>
  </ul>
<% end %>

<div class="card">
  <div class ="card-block" style="text-align: center;">
    <h1 class="display-1 card-title">Cube Algs</h1>
  </div>

  <div class="card-block">
    <div class="card-deck-wrapper">
      <div class="card-deck">

        <!-- F2L -->
        <div class="card">
          <div class="card-block" style="text-align: center;">
            <h4 class="card-title">F2L</h4>
            <%= image_tag('f2l.png', width: 200, class: 'card-image') %>
          </div>
          <div class="card-block">
            <p class="card-text">Algorithms for solving the first 2 layers of the Cube</p>
          </div>
        </div>
        <div class="card">
          <div class="card-block" style="text-align: center;">
            <h4 class="card-title">OLL</h4>
            <%= image_tag('oll.png', width: 200, class: 'card-image') %>
          </div>
          <div class="card-block">
            <p class="card-text">Algorithms for Orienting the last layer of the Cube</p>
          </div>
        </div>
        <div class="card">
          <div class="card-block" style="text-align: center;">
            <h4 class="card-title">PLL</h4>
            <%= image_tag('pll.jpg', width: 200, class: 'card-image') %>
          </div>
          <div class="card-block">
            <p class="card-text">Algorithms for solving the cube after the OLL step is completed</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>