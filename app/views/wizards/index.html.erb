<nav class="navbar navbar-light bg-faded">
  <ul class="nav navbar-nav">
    <li class="nav-item"><%= link_to 'New Wizard', new_wizard_path, class: 'btn btn-primary' %></li>
  </ul>

  <div class="col-sm-3 col-md-3 pull-md-right">
    <%= form_tag wizards_path, class: 'navbar-form', method: :get do %>
      <div class="input-group">
        <%= text_field_tag :search, @search, class: 'form-control', placeholder: 'Search for. . . ' %>
        <span class="input-group-btn">
          <%= submit_tag "Go", class: 'btn btn-primary' %>
        </span>
      </div>
    <% end %>
  </div>
</nav>

<div class="card-block">
  <%=
    if @wizards.count > 16
      render partial: 'wizards_table'
    else
      render partial: 'wizards_cards'
    end
  %>
</div>

