<table class="table">
  <thead>
    <tr>
      <th>Diagram</th>
      <th>Algorithm</th>
      <th>Notes</th>
    </tr>
  </thead>
  <tbody>
    <% @cases.each do |c| %>
      <tr>
        <td>
          <%= link_to image_tag(c.diagram, class: 'card-img-top'), case_path(c) %>
        </td>
        <% if c.algorithms.first %>
        <td>
          <%= c.algorithms.first.algorithm %>
        </td>
        <td>
          <%= c.algorithms.first.description %>
        </td>
        <% else %>
          <td colspan="2"></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>