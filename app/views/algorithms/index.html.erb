<% content_for :search do %>
  <%= form_tag algorithms_path, class: 'navbar-form', method: :get do %>
    <div class="input-group">
      <%= text_field_tag :filter, @filter, class: 'form-control', placeholder: 'Search for. . . ' %>
      <span class="input-group-btn">
        <%= submit_tag "Go", class: 'btn btn-primary' %>
      </span>
    </div>
  <% end %>
<% end %>

<nav class="navbar navbar-light bg-faded">
  <ul class="nav navbar-nav">
    <li class="nav-item"><%= link_to 'New Algorithm', new_algorithm_path, class: 'btn btn-primary' %></li>
  </ul>
</nav>

<div class="card-block">
  <%=
    if @algorithms.count > 16
      render partial: 'algorithms_table'
    else
      render partial: 'algorithm_cards'
    end
  %>
</div>

