<% @algorithms.in_groups_of(4) do |algorithms| %>
  <div class="row">
    <% algorithms.each do |algorithm| %>
      <div class="col-md-3">
        <% if algorithm %>
          <div class="card">
            <div class="center-block" style="text-align: center;">
              <%# image_tag algorithm.wazatar.url(:medium), class: 'card-img-top' %>
            </div>
            <div class="card-block">
              <h4 class="card-title"><%= link_to algorithm.algorithm, algorithm_path(algorithm) %></h4>
              <p class="card-text"><%= algorithm.description %></p>
              <p class="card-text"><small class="text-muted">Last seen <%= time_ago_in_words(algorithm.updated_at) %> ago</small></p>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>